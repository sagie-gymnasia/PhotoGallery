<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoGallery.MainPage">

    <ScrollView>
        <VerticalStackLayout
            x:Name="MainLayout"
            Padding="30,0"
            Spacing="25">
            <Button
                x:Name="UpButton"
                Padding="0"
                FontFamily="Segoe UI Symbol" 
                Text="&#xE110;"
                FontSize="35"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="45"   
                Clicked="Prev_Image_Clicked"
            />
            

            <Image
                x:Name="MyImage"
                Source="nepal1.jpg"
                WidthRequest="400"
                HeightRequest="400"
                />
            <Button
                x:Name="DownButton"
                Padding="0"
                FontFamily="Segoe UI Symbol" 
                Text="&#xE1FD;"
                FontSize="35"
                WidthRequest="50"
                HeightRequest="50"
                CornerRadius="45"   
                Clicked="Next_Image_Clicked"
            />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
